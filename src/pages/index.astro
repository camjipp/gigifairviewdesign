---
import Layout from '../layouts/Layout.astro';
import FurnitureLines from '../components/FurnitureLines.astro';
import About from '../components/About.astro';
import Testimonials from '../components/Testimonials.astro';

const allPlaceholderImages = [
  `${import.meta.env.BASE_URL}images/placeholders/bj_adapt.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_atlas.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_faro.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_fremont.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_fusion.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_fusion2.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_H.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_huntley.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_moto.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_softscape.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_solyluna.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_still.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_stretch.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_swim.png`,
  `${import.meta.env.BASE_URL}images/placeholders/bj_swim2.png`,
  `${import.meta.env.BASE_URL}images/placeholders/tr_contour.png`,
  `${import.meta.env.BASE_URL}images/placeholders/tr_evo.png`,
  `${import.meta.env.BASE_URL}images/placeholders/tr_lascala.png`,
  `${import.meta.env.BASE_URL}images/placeholders/tr_oasis.png`,
  `${import.meta.env.BASE_URL}images/placeholders/tr_radius.png`,
  `${import.meta.env.BASE_URL}images/placeholders/tr_southbeach.png`,
];

function getUniqueRandomImages(count: number): string[] {
  const shuffled = [...allPlaceholderImages].sort(() => 0.5 - Math.random());
  return shuffled.slice(0, count);
}

const brownJordanAdaptImg = `${import.meta.env.BASE_URL}images/placeholders/bj_adapt.png`;
const tropitoneOasisImg = `${import.meta.env.BASE_URL}images/placeholders/tr_oasis.png`;
const arhausHomepageImg = `${import.meta.env.BASE_URL}images/placeholders/Arhaus_Livingroom.png`;
const [aboutImg1, aboutImg2] = getUniqueRandomImages(2);
---

<Layout title="Gigi Fairview Design">
	<section class="relative z-20 max-w-7xl mx-auto px-6 pt-12 md:pt-16 py-0 flex flex-col md:flex-row items-end justify-between">
		<h1 class="text-left flex flex-col items-start font-light text-[#1a1a1a] mb-0 leading-none">
			<span class="block text-5xl sm:text-4xl">Gigi</span>
			<span class="block text-7xl sm:text-6xl">Fairview Design</span>
		</h1>
		<p class="text-base sm:text-sm font-light text-[#1a1a1a] max-w-xs md:text-right mb-0 leading-normal flex flex-col">
			<span>AUTHENTIC FURNISHINGS</span>
			<span>THAT CAPTURE THE</span>
			<span>ESSENCE OF HAND MADE PRODUCTS</span>
		</p>
	</section>
	<FurnitureLines brownJordanImage={brownJordanAdaptImg} tropitoneImage={tropitoneOasisImg} arhausImage={arhausHomepageImg} />
	<div id="about">
		<About aboutImage1={aboutImg1} aboutImage2={aboutImg2} />
	</div>
	<div id="testimonials">
		<Testimonials />
	</div>
</Layout>
