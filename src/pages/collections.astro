const active = Astro.url.searchParams.get("vendor") ?? "All";
const displayItems = active === "All" ? items : items.filter(i => i.vendor === active);
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
    <header class="flex flex-col md:flex-row md:items-end md:justify-between gap-4 mb-8 sm:mb-12">
      <div>

        <h1 class="text-5xl sm:text-6xl font-light text-[#1a1a1a]">Collections</h1>
        <p class="text-base sm:text-lg font-pt-mono text-[#1a1a1a] mt-3 sm:mt-4 max-w-2xl">Curated outdoor furniture, fabrics, and accessories for Baja Sur & beyond, selected to elevate your outdoor living spaces.</p>
      </div>
      <div class="self-start md:self-end">
        <div class="flex flex-wrap gap-2 justify-end">
          {vendors.map(v => (
            <a
              data-vendor-pill
              data-vendor={v}
              href={`${import.meta.env.BASE_URL}collections${v === 'All' ? '' : `?vendor=${encodeURIComponent(v)}`}`}
              class:list={{
                'px-3 py-1.5 rounded-full border text-sm transition-colors': true,
                'bg-black text-white border-black': active === v,
                'bg-white text-[#1a1a1a] border-gray-300 hover:bg-black hover:text-white': active !== v,
              }}
            >
              {v}
            </a>
          ))}
        </div>
      </div>
    </header>
    
 
    <div id="collections-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {["Brown Jordan", "Tropitone", "Arhaus"].map((v) => (
        <>
          <div data-vendor-group={v} class="col-span-full mt-12 sm:mt-16">
            <h2 class="text-3xl sm:text-4xl font-light text-[#1a1a1a] mb-2">{v}</h2>
            {v === "Brown Jordan" ? (
              <p class="text-base sm:text-lg font-pt-mono text-[#1a1a1a] mb-6">Manufacturing exceptional outdoor furniture since 1945, combining innovative design with superior craftsmanship.</p>
            ) : v === "Tropitone" ? (
              <p class="text-base sm:text-lg font-pt-mono text-[#1a1a1a] mb-6">Specializing in residential and commercial outdoor furniture, renowned for their comfort, style, and durability.</p>
            ) : (
              <p class="text-base sm:text-lg font-pt-mono text-[#1a1a1a] mb-6">Step into Inspiration</p>
            )}
          </div>
          {items.filter((it) => it.vendor === v).map((it) => (
            <figure data-vendor={it.vendor} class="group overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 relative h-full min-h-[250px]">
              <img src={it.src} alt={it.alt} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
              <div class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 px-3 py-2 text-center">
                <p class="text-xs sm:text-sm text-gray-200 tracking-wide uppercase mb-1">{it.vendor}</p>
                <p class="text-lg sm:text-xl font-semibold text-white mb-3 sm:mb-4">{it.collection}</p>
                <a class="border border-white text-white px-3 py-1 sm:px-4 sm:py-2 rounded-md hover:bg-white hover:text-black transition-all duration-300 text-sm" href={it.vendor === "Brown Jordan" ? "https://www.brownjordan.com/lookbooks_catalog-2025" : (it.vendor === "Tropitone" ? "https://www.tropitone.com/catalogs" : "https://www.arhaus.com/")} target="_blank" rel="noopener">View Catalog &rarr;</a>
              </div>
            </figure>
          ))}
        </>
      ))}
    </div>
 
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const grid = document.getElementById('collections-grid');
        if (!grid) return;
        const pills = Array.from(document.querySelectorAll('[data-vendor-pill]'));
        const groups = Array.from(grid.querySelectorAll('[data-vendor-group]'));

        function setActive(vendor) {
          // Update pill styles
          pills.forEach(p => {
            const isActive = p.getAttribute('data-vendor') === vendor || (vendor === 'All' && p.getAttribute('data-vendor') === 'All');
            p.classList.toggle('bg-black', isActive);
            p.classList.toggle('text-white', isActive);
            p.classList.toggle('border-black', isActive);
            p.classList.toggle('bg-white', !isActive);
            p.classList.toggle('text-[#1a1a1a]', !isActive);
            p.classList.toggle('border-gray-300', !isActive);
          });
          // Show/hide complete vendor groups (header + items)
          groups.forEach(g => {
            const gVendor = g.getAttribute('data-vendor-group');
            const match = vendor === 'All' || gVendor === vendor;
            g.classList.toggle('hidden', !match);
            let el = g.nextElementSibling;
            while (el && !el.hasAttribute('data-vendor-group')) {
              if (el.tagName.toLowerCase() === 'figure') {
                el.classList.toggle('hidden', !match);
              }
              el = el.nextElementSibling;
            }
          });
        }

        // Initial vendor from URL or 'All'
        const params = new URL(window.location.href).searchParams;
        const initial = params.get('vendor') || 'All';
        setActive(initial);

        // Click handlers
        pills.forEach(p => {
          p.addEventListener('click', (e) => {
            e.preventDefault();
            const vendor = p.getAttribute('data-vendor') || 'All';
            setActive(vendor);
            const url = new URL(window.location.href);
            if (vendor === 'All') url.searchParams.delete('vendor'); else url.searchParams.set('vendor', vendor);
            history.replaceState({}, '', url);
          });
        });
      });
    </script>
  </section>
</Layout>