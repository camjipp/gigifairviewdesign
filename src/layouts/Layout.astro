---
import Nav from "../components/Nav.astro";
import SiteFooter from "../components/SiteFooter.astro";
const { title = "Gigi Fairview Design" } = Astro.props;
import "../styles/global.css"; // Import Tailwind CSS base styles
---
<!doctype html>
<html lang="en" class="bg-white text-gray-900">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Outdoor furniture specified for Baja Sur & beyond. Brown Jordan & Tropitone. ASID-licensed services, 2D/3D planning, white-glove installation." />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@300;400;500;700&family=PT+Mono&display=swap" rel="stylesheet">
	</head>
	<body>
		<Nav />
		<main class="min-h-[70vh] pt-14 animate-fade-in"><slot /></main>
		<SiteFooter />
	</body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@300;400;500;700&family=PT+Mono&display=swap');
 
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
 
  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
 
  :root {
    --color-accent-blue: #60a5fa; /* A muted blue */
  }
 
  .section-spacing {
    margin-bottom: 6rem; /* Generous spacing between sections */
  }
 
  body {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 1.125rem; /* Equivalent to text-lg in Tailwind, for more spacious body copy */
    line-height: 1.75;   /* Increased line-height for better readability */
    color: #1a1a1a;    /* A deep, rich black for primary text */
  }
</style>
