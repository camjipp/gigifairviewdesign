---
import HamburgerMenu from "./HamburgerMenu.astro";
const BASE_URL = import.meta.env.BASE_URL;
const links = [
  { href: `${BASE_URL}`, label: "Home" },
  { href: `${BASE_URL}collections`, label: "Collections" },
  { href: `${BASE_URL}#testimonials`, label: "Reviews" },
  { href: `${BASE_URL}contact`, label: "Contact" },
];
---
<nav class="w-full border-b border-gray-200 bg-white/80 fixed top-0 backdrop-blur-md" style="z-index: 100;">
  <div class="max-w-7xl mx-auto px-4 md:px-6 h-14 flex items-center justify-between">
    <a href={BASE_URL} class="font-bold tracking-tight site-title text-lg md:text-2xl text-[#1a1a1a]">Gigi Fairview Design</a>
    <ul class="hidden md:flex gap-8 text-base text-[#333]">
      {links.map(l => (
        <li><a class="font-semibold hover:text-[var(--color-accent-blue)] transition-all duration-300" href={l.href}>{l.label}</a></li>
      ))}
    </ul>
    <HamburgerMenu links={links} />
  </div>
</nav>
<style>
  .site-title {
    font-family: 'Playfair Display', serif;
    font-style: italic;
  }
</style>
