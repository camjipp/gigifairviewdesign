---
const BASE_URL = import.meta.env.BASE_URL;
const links = [
  { href: `${BASE_URL}`, label: "Home" },
  { href: `${BASE_URL}collections`, label: "Collections" },
  { href: `${BASE_URL}#testimonials`, label: "Reviews" },
  { href: `${BASE_URL}contact`, label: "Contact" },
];
---

<footer class="bg-black text-white py-12 md:py-16">
  <div class="max-w-7xl mx-auto px-4 md:px-6 flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
    <div class="text-center md:text-left">
      <p class="text-xl md:text-2xl font-bold tracking-tight">Gigi Fairview Design</p>
      <p class="text-xs md:text-sm text-gray-400 mt-2">&copy; {new Date().getFullYear()} All rights reserved.</p>
    </div>

    <nav>
      <ul class="flex flex-wrap justify-center md:justify-end gap-x-6 md:gap-x-8 gap-y-3 md:gap-y-4 text-sm md:text-base">
        {links.map((l: { href: string; label: string }) => (
          <li>
            <a class="font-semibold hover:text-gray-300 transition-colors duration-300" href={l.href}>{l.label}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</footer>
